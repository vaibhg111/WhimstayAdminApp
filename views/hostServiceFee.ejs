            function check(e, value) {
                var unicode = e.charCode ? e.charCode : e.keyCode;

                if (value == 100) {
                    return false;
                }

                var idx = value.indexOf('.');
                if (idx >= 0 && unicode != 45 && unicode != 46) {
                    if (value.length - idx > 2) {
                        e.target.value = value.substring(0, value.length - 1);
                    }
                }

                if (idx != -1 && unicode == 46) {
                    return false;
                }

